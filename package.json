{
  "name": "cown-telegram-app",
  "version": "1.0.0",
  "description": "Ứng dụng nhắn tin dựa trên Telegram API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:network": "cross-env HOST=0.0.0.0 PORT=3001 nodemon server.js",
    "dev:domain": "cross-env HOST=0.0.0.0 PORT=3001 nodemon server.js",
    "build": "echo 'Build completed'",
    "build:dev": "webpack --mode development",
    "postinstall": "echo 'Dependencies installed'",
    "docker:build": "docker build -t cown-telegram-app .",
    "docker:run": "docker run -p 3000:3000 cown-telegram-app",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:push": "docker push your-dockerhub-username/cown-telegram-app",
    "deploy": "npm run docker:build && npm run docker:push"
  },
  "keywords": [
    "telegram",
    "messaging",
    "bot",
    "api"
  ],
  "author": "Nghia",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "input": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.2",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "telegram": "^2.26.22",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "nodemon": "^3.0.2",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
